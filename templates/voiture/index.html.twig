{% extends 'base.html.twig' %}

{% block title %}Voiture index{% endblock %}

{% block body %}
    <h1>Voiture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Matricule</th>
                <th>Description</th>
                <th>Photo</th>
                <th>Prix</th>
                <th>Modele</th>
                <th>Marque</th>
                <th>Dispo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voiture in voitures %}
            <tr>
                <td>{{ voiture.id }}</td>
                <td>{{ voiture.nom }}</td>
                <td>{{ voiture.matricule }}</td>
                <td>{{ voiture.description }}</td>
                <td>{{ voiture.photo }}</td>
                <td>{{ voiture.prix }}</td>
                <td>{{ voiture.modele }}</td>
                <td>{{ voiture.marque }}</td>
                <td>{{ voiture.dispo ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('voiture_show', {'id': voiture.id}) }}">show</a>
                    <a href="{{ path('voiture_edit', {'id': voiture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('voiture_new') }}">Create new</a>
{% endblock %}
